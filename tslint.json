{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-airbnb"
  ],
  "rules": {
    "import-name": false,
    "object-shorthand-properties-first": false,
    "indent": [
      true,
      "spaces",
      2
    ],
    "max-line-length": [
      true,
      150
    ],
    "object-literal-key-quotes": false,
    "align": false,
    "variable-name": [
      true,
      "allow-leading-underscore",
      "allow-pascal-case",
      "ban-keywords",
      "check-format"
    ],
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "no-console": {
      "severity": "error"
    },
    "no-shadowed-variable": true,
    "no-trailing-whitespace": true,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ],
    "jsdoc-format": false,
    "no-consecutive-blank-lines": false,
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "avoid-template"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": false,
    "no-unused-expression": false,
    "ordered-imports": false,
    "arrow-parens": false,
    "no-empty": false,
    "curly": false
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "node_modules/**/*",
      "**/*.js",
      "build/**/*"
    ]
  }
}
